{
  "id": "me.nanoleaf",
  "sdk": 2,
  "brandColor": "#3FAE49",
  "name": {
    "en": "Nanoleaf"
  },
  "description": {
    "en": "Adds support for Nanoleaf Aurora devices"
  },
  "category": "lights",
  "version": "2.0.0",
  "compatibility": ">=2.1.1",
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "flow": {
    "actions": [
      {
        "id": "set_effect",
        "title": {
          "en": "Set effect",
          "nl": "Start een effect"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=aurora"
          },
          {
            "type": "autocomplete",
            "name": "effect"
          }
        ]
      },
      {
        "id": "set_rainbow",
        "title": {
          "en": "Set rainbow",
          "nl": "Laat een regenboog zien"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=aurora"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode"
      ],
      "images": {
        "large": "/drivers/aurora/assets/images/large.jpg",
        "small": "/drivers/aurora/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "authenticate"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "authenticate"
        }
      ],
      "name": {
        "en": "Nanoleaf Aurora"
      },
      "id": "aurora"
    },
    {
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode"
      ],
      "images": {
        "large": "/drivers/canvas/assets/images/large.jpg",
        "small": "/drivers/canvas/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "authenticate"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "authenticate"
        }
      ],
      "name": {
        "en": "Nanoleaf Canvas"
      },
      "id": "canvas"
    }
  ]
}