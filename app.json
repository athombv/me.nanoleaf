{
  "id": "me.nanoleaf",
  "sdk": 2,
  "brandColor": "#3FAE49",
  "name": {
    "en": "Nanoleaf"
  },
  "description": {
    "en": "Adds support for Nanoleaf Aurora devices"
  },
  "category": "lights",
  "version": "1.1.1",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.nl"
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "drivers": [
    {
      "id": "aurora",
      "name": {
        "en": "Nanoleaf Aurora"
      },
      "images": {
        "large": "/drivers/aurora/assets/images/large.jpg",
        "small": "/drivers/aurora/assets/images/small.jpg"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "get_token"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "get_token"
        }
      ]
    }
  ],
  "flow": {
    "actions": [
      {
        "id": "set_effect",
        "title": {
          "en": "Set effect",
          "nl": "Start een effect"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=aurora"
          },
          {
            "type": "autocomplete",
            "name": "effect"
          }
        ]
      },
      {
        "id": "set_rainbow",
        "title": {
          "en": "Set rainbow",
          "nl": "Laat een regenboog zien"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=aurora"
          }
        ]
      }
    ]
  }
}