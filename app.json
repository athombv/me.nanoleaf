{
  "id": "me.nanoleaf",
  "sdk": 2,
  "brandColor": "#3FAE49",
  "name": {
    "en": "Nanoleaf"
  },
  "description": {
    "en": "Adds support for Nanoleaf devices"
  },
  "category": "lights",
  "version": "2.2.2",
  "compatibility": ">=2.5.0",
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "flow": {
    "actions": [
      {
        "title": {
          "en": "Set effect",
          "nl": "Start een effect"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=aurora|canvas"
          },
          {
            "type": "autocomplete",
            "name": "effect"
          }
        ],
        "id": "set_effect"
      }
    ]
  },
  "drivers": [
    {
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode",
        "measure_power"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "approximated": true
        }
      },
      "images": {
        "large": "/drivers/aurora/assets/images/large.jpg",
        "small": "/drivers/aurora/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "authenticate"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "authenticate"
        }
      ],
      "name": {
        "en": "Nanoleaf Aurora"
      },
      "discovery": "nanoleaf-aurora",
      "id": "aurora"
    },
    {
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode",
        "measure_power"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "approximated": true
        }
      },
      "images": {
        "large": "/drivers/canvas/assets/images/large.jpg",
        "small": "/drivers/canvas/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "authenticate"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "authenticate"
        }
      ],
      "name": {
        "en": "Nanoleaf Canvas"
      },
      "discovery": "nanoleaf-canvas",
      "id": "canvas"
    },
    {
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode",
        "measure_power"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "approximated": true
        }
      },
      "images": {
        "large": "/drivers/shapes/assets/images/large.jpg",
        "small": "/drivers/shapes/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "authenticate"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "authenticate"
        }
      ],
      "name": {
        "en": "Nanoleaf Shapes"
      },
      "discovery": "nanoleaf-shapes",
      "id": "shapes"
    }
  ],
  "discovery": {
    "nanoleaf-aurora": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "nanoleafapi",
        "protocol": "tcp"
      },
      "id": "{{txt.id}}",
      "conditions": [
        [
          {
            "field": "txt.md",
            "match": {
              "type": "regex",
              "value": "NL22"
            }
          }
        ]
      ]
    },
    "nanoleaf-canvas": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "nanoleafapi",
        "protocol": "tcp"
      },
      "id": "{{txt.id}}",
      "conditions": [
        [
          {
            "field": "txt.md",
            "match": {
              "type": "string",
              "value": "NL29"
            }
          }
        ]
      ]
    },
    "nanoleaf-shapes": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "nanoleafapi",
        "protocol": "tcp"
      },
      "id": "{{txt.id}}",
      "conditions": [
        [
          {
            "field": "txt.md",
            "match": {
              "type": "string",
              "value": "NL42"
            }
          }
        ]
      ]
    }
  }
}