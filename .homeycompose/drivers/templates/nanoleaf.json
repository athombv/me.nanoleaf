{
  "class": "light",
  "capabilities": [
    "onoff",
    "dim",
    "light_hue",
    "light_saturation",
    "light_temperature",
    "light_mode",
    "measure_power"
  ],
  "capabilitiesOptions": {
    "measure_power": {
      "approximated": true
    }
  },
  "images": {
    "large": "{{driverAssetsPath}}/images/large.jpg",
    "small": "{{driverAssetsPath}}/images/small.jpg"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "authenticate"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "authenticate",
      "$template": "authenticate"
    }
  ]
}